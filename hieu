#include <Dabble.h>
#include<SoftwareSerial.h>
SoftwareSerial BTSerial(12,11); // TX, RX

void setup() {
  Serial.begin(9600);
  BTSerial.begin(9600);
  Dabble.begin(BTSerial);

}

void loop() {
  Dabble.processInput();

  if (GamePad.isUpPressed()) {
    Serial.println("UP");
  }
  else if (GamePad.isDownPressed()){
    Serial.println("DOWN");
  }
  else if (GamePad.isLeftPressed()){
    Serial.println("L");
  }
  else if (GamePad.isRightPressed()){
    Serial.println("R");
  }
  else Serial.println("STOP");
}
